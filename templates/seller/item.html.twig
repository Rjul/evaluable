{# Seller item #}

<div class="m-5">

    <div id="announce-home-presentation" class="announce-home-presentation bg-grey rounded">

        <div class="d-flex align-items-center justify-content-center py-2 px-1 bg-green announce-presentation-address ">
            <img class="height-small mr-2 " src="/img/icons/map.svg" alt="marqueur de carte">

            <div class="d-flex align-items-center justify-content-center">
                <p class="text-semi-bold location" data-has-floor="1">
                    Boulogne-Billancourt, 92100
                </p>

                <p class="text-small floor">
                    4ème&nbsp;étage
                </p>
            </div>
        </div>

        <div class="announce-info-side">

            <div class="d-flex flex-row align-items-center user-infos">
                <div class="card-user-picture-announce position-relative">
                    <img class="profile-picture position-absolute" src="/img/icons/anon.svg" alt="photo de profil">
                    {% for i in [1, 2, 3, 4, 5] %}
                        {% if i <= averageStars %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="ratting ratting-pos-{{ i }}" viewBox="0 0 16 16">
                                <path fill="#bfefc7" d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                <path fill="#20c997" d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                            </svg>
                        {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="ratting ratting-pos-{{ i }}" viewBox="0 0 16 16">
                                <path fill="#FFF" d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                <path fill="#a6b9a9" d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                            </svg>
                        {% endif %}
                    {% endfor %}
                </div>


                <div class="flex-fill card-infos pl-2">
                    <div class="info-container">
                        <div class="seller-name text-green text-semi-bold text-bigger">
                            {{ seller.name }}
                        </div>
                        <div class="text-small time pt-1">Mis à jour aujourd'hui</div>
                    </div>


                </div>
            </div>
            <div>
                <p class="text-semi-bold">Préférences de retrait</p>
                <div class="d-flex align-items-center mb-3 mt-1">
                    <i class="fa fa-calendar text-bigger width-small text-center text-green flex-shrink-0"></i>
                    <div class="pl-2">
                        <div class="d-flex justify-content-start align-items-center flex-wrap">
                            <p class="text-small mr-1">Semaine&nbsp;:</p>
                            <p class="text-small text-semi-bold">de 18h à 20h</p>
                        </div>
                        <div class="d-flex justify-content-start align-items-center flex-wrap">
                            <p class="text-small mr-1">Week-end&nbsp;:</p>
                            <p class="text-small text-semi-bold">de 18h à 20h</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
